/**
 * Implements hook_node_presave().
 */
function devshop_servers_node_presave($node) {
  if ($node->type == 'server' && $node->services['ansible_roles']->type == 'devmaster') {
    $node->field_url['und'][0] = array(
      'url' => 'http://' . $node->title,
      'title' => t('Launch DevShop'),
    );
  }
}